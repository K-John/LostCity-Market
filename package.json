{
    "private": true,
    "version": "1.3.0",
    "scripts": {
        "dev": "vite",
        "build-only": "vite build && vite build --ssr",
        "build": "run-p format lint && npm run build-only",
        "build-all": "composer helpers && ./vendor/bin/pint && ./vendor/bin/phpstan analyse --memory-limit=512M && ./vendor/bin/pest && npm run build",
        "type-check": "vue-tsc --noEmit",
        "lint": "eslint \"resources/{scripts,views}/**/*.{js,ts,vue}\" --fix",
        "format": "prettier \"resources/{scripts,views,css}/**/*.{js,ts,vue,css}\" --write",
        "release": "npm run build-all && node ./release.js",
        "patch": "npm version patch --no-git-tag-version && npm run release",
        "minor": "npm version minor --no-git-tag-version && npm run release"
    },
    "type": "module",
    "devDependencies": {
        "@tailwindcss/forms": "^0.5.7",
        "@types/lodash": "^4.17.15",
        "@types/node": "^20.10.6",
        "@types/vue-select": "^3.16.8",
        "@typescript-eslint/eslint-plugin": "^6.17.0",
        "@typescript-eslint/parser": "^6.17.0",
        "@vitejs/plugin-vue": "^5.0.2",
        "autoprefixer": "^10.4.16",
        "eslint": "^8.56.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-tailwindcss": "^3.13.1",
        "eslint-plugin-unused-imports": "^3.0.0",
        "eslint-plugin-vue": "^9.19.2",
        "laravel-vite-plugin": "^1.0.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.33",
        "prettier": "^3.1.1",
        "prettier-plugin-tailwindcss": "^0.5.11",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.7.3",
        "unplugin-auto-import": "^0.17.3",
        "unplugin-vue-components": "^0.26.0",
        "vite": "^5.0.11",
        "vite-plugin-eslint": "^1.8.1",
        "vite-plugin-watch": "^0.2.0",
        "vue": "^3.5.13",
        "vue-tsc": "^2.2.0"
    },
    "dependencies": {
        "@headlessui/vue": "^1.7.16",
        "@heroicons/vue": "^2.1.5",
        "@inertiajs/vue3": "^2.0.3",
        "@vue/server-renderer": "^3.4.5",
        "@vueuse/core": "^10.7.1",
        "dayjs": "^1.11.10",
        "floating-vue": "^5.2.2",
        "lodash": "^4.17.21",
        "momentum-lock": "^0.1.2",
        "momentum-paginator": "^1.0.7",
        "momentum-trail": "^0.3.5",
        "query-string": "^8.1.0",
        "vue-select": "^4.0.0-beta.6",
        "vue-toastification": "^2.0.0-rc.5"
    }
}
